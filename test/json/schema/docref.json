{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://huri.net/schema/docref.json",
  "title": "DocRef",
  "type": "object",
  "required": ["idref"],
  "definitions":
  {
    "uuid":
    {
      "type": "string",
      "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$"
    }
  },
  "properties":
  {
    "idref": {"$ref": "#/definitions/uuid", "description":"UUID of target document"},
    "id": {"$ref": "#/definitions/uuid", "description":"Optional UUID to refer to this docref"}
  }
}